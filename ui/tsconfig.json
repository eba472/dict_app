{
    "compilerOptions": {
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "isolatedModules": true,
      "resolveJsonModule": true,
      "jsx": "react",
      "lib": ["es6", "dom"],
      "moduleResolution": "node",
      "noEmit": true,
      "strict": true,
      "baseUrl": "src",
      "target": "esnext"
    },
    "include": ["src/**/*"],
    "exclude": [
      "node_modules",
      "babel.config.js",
      "metro.config.js",
      "jest.config.js"
    ]
  }